<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@color/white"
    >
    <include
        android:id="@+id/toolbarkk"
        layout="@layout/tool_bar"
        />


    <LinearLayout

        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">


            <info.CameraClick.ImageViewc
                android:layout_gravity="center"

                android:src="@drawable/save_user1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/u_p_img"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ImageView
                android:id="@+id/u_p_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"


                android:src="@drawable/ic_add_a_photo_black_24dp"

                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/u_p_img"
                android:layout_alignEnd="@+id/u_p_img" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
       android:layout_margin="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView                android:textStyle="bold"


                android:gravity="end"
                android:text="name :"
                android:textSize="20dp"
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />

            <TextView
                android:textColor="@color/brn"
                android:id="@+id/u_p_name"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                android:textSize="20dp"

                android:layout_weight=".1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <View
            android:layout_marginBottom="7dp"
            android:layout_marginTop="1dp"
            android:background="@color/brn"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"

                android:gravity="end"
                android:text="email :"
                android:textSize="20dp"
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/brn"

                android:id="@+id/u_p_email"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:layout_weight=".1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
        <View
            android:layout_marginBottom="7dp"
            android:layout_marginTop="1dp"
            android:background="@color/brn"
            android:layout_width="match_parent"
            android:layout_height="1px"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:gravity="end"
                android:textStyle="bold"
                android:text="phone :"
                android:textSize="20dp"
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/brn"
                android:id="@+id/u_p_phone"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:layout_weight=".1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout><View
        android:layout_marginBottom="7dp"
        android:layout_marginTop="1dp"
        android:background="@color/brn"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:gravity="end"
                android:text="age :"
                android:textSize="20dp"
                android:layout_weight=".3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
android:textColor="@color/brn"
                android:layout_marginLeft="5dp"
                android:textStyle="italic"
                android:textSize="20dp"
                android:layout_weight=".1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/u_p_age" />

        </LinearLayout>
        <View
            android:layout_marginBottom="7dp"
            android:layout_marginTop="1dp"
            android:background="@color/brn"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </LinearLayout>


</LinearLayout>