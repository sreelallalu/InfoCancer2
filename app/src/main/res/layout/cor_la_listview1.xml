<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

    </LinearLayout>
<android.support.v4.widget.SwipeRefreshLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/comment_refresh_opwe">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">





            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="end"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="13dp">
                            <TextView
                                android:text="catg:"
                                android:textSize="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                            <TextView
                                android:textColor="@color/darkred"
                                android:id="@+id/q_category"
                                android:layout_marginLeft="1dp"
                                android:text="eye_cancer"
                                android:textSize="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="1dp"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="end"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/id_question_view_time"
                                android:textColor="@color/brn"
                                android:text="22/04/2015"
                                android:textSize="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent" />







                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginLeft="20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/u_propic_view"
                                android:src="@drawable/save_doctor1"
                                android:layout_width="50dp"
                                android:layout_height="50dp" />
                            <TextView
                                android:id="@+id/u_user_name"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="FASil"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>



                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginLeft="60dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="12dp"
                                android:textSize="15dp"
                                android:textStyle="italic|bold"
                                android:textColor="@color/brn"
                                android:id="@+id/id_question_view_sub"
                                android:text="title one answer" android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                            <TextView
                                android:id="@+id/id_question_view_content"
                                android:text="cool"
                                android:layout_width="wrap_content" android:layout_height="wrap_content" />


                        </LinearLayout>
                    </LinearLayout>

                </ScrollView>






            </LinearLayout>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
            <include layout="@layout/viewq2_listview"/>
</LinearLayout>

        </LinearLayout>

</android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>