<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout


                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/u_propic_viewu2"
                        android:layout_width="80dp"
                        android:layout_height="80dp" />


                </LinearLayout>
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/u_user_nameu2"
                        android:textSize="20dp"
                        android:text="hallo man cool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                 />
                    <TextView
                        android:id="@+id/q_categoryu2"
                        android:layout_gravity="end"
                        android:layout_marginLeft="80dp"
                        android:layout_marginTop="30dp"
                        android:textSize="10dp"
                        android:text="hallo man cool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"                 />

                </LinearLayout>



            </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/id_question_view_time2u2"
                        android:textSize="10dp"
                        android:text="Subject:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                    <TextView
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="50dp"
                        android:textSize="20dp"
                        android:text="Subject:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView22" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/id_question_view_sub2u2"
                android:text="hhhh"
                android:layout_marginLeft="50dp"
                android:textSize="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"              />




        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/brn"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginRight="5dp"
                android:layout_marginLeft="50dp"
                android:textSize="20dp"
                android:text="Content:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/id_question_view_content2u2"
                android:layout_marginLeft="50dp"
                android:textSize="15dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"              />


        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/brn"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:id="@+id/id_comment_linear_buttonu2"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <ImageView
                android:src="@drawable/ic_comment_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="3dp"
                android:text="Comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            EditText
            android:id="@+id/id_question_comment_edittext2"
            android:textColor="@color/brn"
            android:textStyle="italic"
            android:hint="type_comment"
            android:layout_weight="80"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />ImageView
            android:id="@+id/comment_button_id2"
            android:layout_weight="0"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        </LinearLayout>nearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/comment_refresh_idu2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">




                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ListView
                        android:smoothScrollbar="true"

                        android:drawSelectorOnTop="false"
                        android:id="@+id/xlistview_idu2"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp">

                    </ListView>
                </LinearLayout>




            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>
        <View
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="20dp"
            android:background="@color/brn"
            android:layout_width="match_parent"
            android:layout_height="1px"></View>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="90dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>
    </LinearLayout>

</ScrollView>